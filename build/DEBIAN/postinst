#!/bin/sh
# postinst script for repeater-audio-control
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
      if ! grep -q .1.3.6.1.4.1.8072.2.255 /etc/snmp/snmpd.local.conf 2> /dev/null
      then
        echo "Adding sensors to snmp"
        echo pass_persist .1.3.6.1.4.1.8072.2.255 /opt/repeater-audio-control/venv/bin/python -u /opt/repeater-audio-control/snmp-passthrough.py > /etc/snmp/snmpd.local.conf
      fi

      echo "Creating virtualenv"
      virtualenv -p python3 /opt/repeater-audio-control/venv
      /opt/repeater-audio-control/venv/bin/pip install -r /opt/repeater-audio-control/requirements.txt
      echo "(re)Starting services"
      systemctl daemon-reload
      systemctl restart repeater-audio-control-backend
      systemctl enable repeater-audio-control-backend.service
      systemctl reload nginx
      systemctl restart snmpd

      if ! grep -q "tmpfs	/var/log" /etc/fstab
      then
        echo "Adding tmpfs entries for /var/log"
        echo "tmpfs	/var/log	tmpfs	defaults,noatime,nosuid,nodev,noexec,mode=0755	0	0" >> /etc/fstab
        echo "tmpfs	/var/log/nginx	tmpfs	defaults,noatime,nosuid,nodev,noexec,mode=0755	0	0" >> /etc/fstab
      fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
